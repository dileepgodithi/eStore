<%- include('../partials/header') %>

<div class="container">
    <h1 style="text-align: center;">Edit Product</h1>
    <div style="width:30%; margin: 25px auto">
        <form action="/products/<%= product._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="product[name]" value="<%= product.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="product[image]" value="<%= product.image %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="product[description]" value="<%= product.description %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="product[price]" value="<%= product.price %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="product[stock]" value="<%= product.stock %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="product[category]" value="<%= product.category %>">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Submit</button>
            </div>  
        </form>
        <a href="/">Back</a>
    </div>
</div>

<%- include('../partials/footer') %>